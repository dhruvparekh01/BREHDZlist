<body>
{{# each arr}}
  <div class="container">

    <a href="/products/{{this.id}}  " class="custom-card"><div class="card m-1" style="width: 16rem; height: 25rem">
            <img class="card-img-top" src="{{this.Img}}" alt="A picture of   {{this.Name}}  " style="height: auto; width: auto; max-width: 150px; max-height: 150px; margin-top: 5px; margin-left: auto; margin-right: auto;">
            <div class="card-body">
              <h5 class="card-title">  {{this.Name}}  </h5>
              <p class="card-text">Location: <b> {{this.Location}}  </b></p>
              <p class="card-text">Condition: <b>  {{this.Condition}}  </b></p>

            </div>
              <div class="card-footer text-muted text-center">
                <p class="card-text"> $  {{this.Price}}  </p>
              </div>
          </div></a>


  </div>
  {{/each}}



