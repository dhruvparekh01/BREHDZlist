<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{title}}</title>
    {{>headinit}}
  </head>
  <body class="d-flex flex-column h-100">
    {{>navbar}}
    <div class="container">
        <div class="card">
            <div class="card-body">
            <form action="/actionlogin" method="post" id="login_form" name="login_form">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control" required>
              </div>
              <div class="form-group">
                <label for="pass">Password</label>
                <input type="password" id="pass" name="pass" class="form-control" required>
              </div>
              <button type="submit" class="btn btn-primary" onsubmit="login_alert()">Login</button>
            </form>
            </div>
        </div>
    </div>
    {{>footinit}}
    <script src="/scripts/sweetalerts2.js"></script>
    <script src="sweetalert2.all.min.js"></script>
  </body>
</html>
